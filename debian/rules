#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

export PYBUILD_NAME=dyda
export PYBUILD_DISABLE_python3.4=test
export PYBUILD_DISABLE_python3.5=test
export PYBUILD_DISABLE_python3.6=test
export PYBUILD_DISABLE_python3.7=test
export PYBUILD_DISABLE_python3.8=test

%:
	dh $@ --with python3 --buildsystem=pybuild

#override_dh_auto_install:
#	dh_auto_install
#	find $(CURDIR)/debian/python3-dyda/usr/lib -name '*.py' -exec rm {} \;

override_dh_auto_clean:
	dh_auto_clean
	rm -rf dyda.egg-info
